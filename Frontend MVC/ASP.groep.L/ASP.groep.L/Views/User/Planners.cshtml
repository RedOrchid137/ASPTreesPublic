@model IEnumerable<User>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-success">Planners</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="User" asp-action="Create"  asp-route-role=@Role.MVC_Planner class="btn btn-outline-success">Add a new Planner</a>
        </div>
    </div>
    <br/>

    @if (Model.Count() > 0)
    {
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>Planner ID</th>
                        <th>Email</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Changes</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td width="22%">@employee.Id</td>
                        <td width="22%">@employee.Email</td>
                        <td width="22%">@employee.FirstName</td>
                        <td width="22%">@employee.LastName</td>
                        <td width="12%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="User" asp-action="Update" asp-route-Id="@employee.Id" class="btn btn-success mx-1">Update</a>
                                <a asp-controller="User" asp-action="Delete" asp-route-Id="@employee.Id" class="btn btn-danger mx-1">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
    }
    else
    {
       <p>No items created yet</p>
    }


</div>