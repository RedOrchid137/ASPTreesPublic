@model ASP.groep.L.Domain.WorkSchedule

<form method="post" asp-action="Update">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="mb-3 row">
            <h2 class="text-success">Update a WorkSchedule</h2>
        </div>
        <div class="row">
            <div class="col-12">

                <div class="mb-3 row">
                    <div class="col-12">
                        <label asp-for="Employee"></label>
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-12">
                           <label asp-for="EmployeeId" class="control-label"></label>
                        <select asp-for="EmployeeId" class ="form-control" asp-items="ViewBag.EmployeeId"></select>
                    </div>
                </div>

                <div class="mb-3 row">
                    <div class="col-12">
                        <label asp-for="Planner"></label>
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-12">
                           <label asp-for="PlannerId" class="control-label"></label>
                        <select asp-for="PlannerId" class ="form-control" asp-items="ViewBag.PlannerId"></select>
                    </div>
                </div>

                <div class="mb-3 row">
                    <div class="col-12">
                        <label asp-for="Description"></label>
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-12">
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3 row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-outline-success w-75" value="Update" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-outline-danger w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}