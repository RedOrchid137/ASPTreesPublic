@model Site

<form method="post" asp-action="Update" enctype="multipart/form-data">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="mb-3 row">
            <h2 class="text-success">Update a Site</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="mb-3 row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="BluePrint"></label>
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-4">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <input asp-for="ImageFile" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <label asp-for="Address" class="control-label"></label>
                        <input asp-for="Address.StreetName" class="form-control" />
                        <input asp-for="Address.Commune" class="form-control" placeholder="Commune" />
                        <input asp-for="Address.ZipCode" class="form-control" placeholder="ZipCode" />
                        <input asp-for="Address.HouseNr" class="form-control" placeholder="HouseNr" />
                    </div>
                    <div class="col-6">
                        <label asp-for="TreeFarmId" class="control-label"></label>
                        <select asp-for="TreeFarmId" class="form-control" asp-items="ViewBag.TreeFarmId"></select>
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-outline-success w-75" value="Update" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-outline-danger w-75">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }