@model TreeSpecies

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="border p-3">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div> ~ Voor informatie aan de developer*@
        <div class="mb-3 row">
            <h2 class="text-success">Add TreeSpecies</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="mb-3 row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="ImageFile">Image</label>
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-4">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <input asp-for="ImageFile" class="form-control" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>
                </div>
                 <h4 class="text-success" style="margin-top:20px;margin-bottom:20px">Maintenance Plan</h4>
                <div class="mb-3 row">
                    <div class="col-3">
                        <label asp-for="MaintenancePlan.Title"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="MaintenancePlan.Season"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="MaintenancePlan.Description"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="MaintenancePlan.PlanFile"></label>
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-3">
                        <input asp-for="MaintenancePlan.Title" class="form-control" />
                        <span asp-validation-for="MaintenancePlan.Title" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <select asp-for="MaintenancePlan.Season" class="form-control" asp-items="ViewBag.Season"></select>
                        <span asp-validation-for="MaintenancePlan.Season" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <input asp-for="MaintenancePlan.Description" class="form-control" />
                        <span asp-validation-for="MaintenancePlan.Description" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <input asp-for="MaintenancePlan.PlanFile" class="form-control" />
                        <span asp-validation-for="MaintenancePlan.PlanFile" class="text-danger"></span>
                    </div>
                </div>


                <div class="mb-3 row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-outline-success w-75" value="Create" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-outline-danger w-75">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }