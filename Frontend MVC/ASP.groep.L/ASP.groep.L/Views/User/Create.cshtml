@model User

<form method="post" asp-action="Create">
    <div class="border p-3">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div> ~ Voor informatie aan de developer*@
        <div class="mb-3 row">
            @if (@ViewBag.CurRole == Role.Ionic_Employee)
            {
                <h2 class="text-success">Add an Employee</h2>
            }
            else
            {
                <h2 class="text-success">Add a Planner</h2>
            }
        </div>
        <div class="row">
            <div class="col-12">
                <div class="mb-3 row">
                    <div class="col-3">
                        <label asp-for="Email">Email</label>
                    </div>
                    <div class="col-3">
                        <label asp-for="FirstName">First Name</label>
                    </div>
                    <div class="col-3">
                        <label asp-for="LastName">Last Name</label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Role">Role</label>
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-3">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <select asp-for="Role" class="form-control" asp-items="ViewBag.Role"></select>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-outline-success w-75" value="Create" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" asp-route-role=@ViewBag.CurRole class="btn btn-outline-danger w-75">Back</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{ 
    @{ <partial name="_ValidationScriptsPartial" /> }
}